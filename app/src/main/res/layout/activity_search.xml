<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="missingPrefix"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#fff1b9"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="nongsa.agoto.loginandregistration.activity.setting.Search">

    <Spinner
        android:layout_width="fill_parent"
        android:id="@+id/big_city"
        app:font="custom2"
        android:layout_height="50dp"></Spinner>


    <Spinner
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:id="@+id/small_city"
        app:font="custom2"
        android:layout_height="50dp"></Spinner>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/search_edit"
            android:hint="작물"
            app:font="custom2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색"
            app:font="custom2"
            android:background="@drawable/buttonbackground_close"
            android:id="@+id/search_button"/>

    </LinearLayout>
</LinearLayout>
