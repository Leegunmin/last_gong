<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginandregistration.activity.SettingActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/logout_eval_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pay_setting"
                android:layout_alignBottom="@+id/pay_setting"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp"
                android:background="@color/btn_logut_bg"
                android:text="@string/btn_logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/teacher_eval_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="선생님"
            android:textSize="18sp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/writer_eval_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="게시자"
            android:textSize="18sp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/rating_eval_write"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="2.5"
            android:stepSize="0.5"
            android:background="#ffffff"/>

        <EditText
            android:id="@+id/review_eval_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="text"
            android:hint="후기"
            android:textSize="18sp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/write_eval_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:text="쓰기"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView >
