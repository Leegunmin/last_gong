<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="missingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginandregistration.activity.SettingActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            >

            <Button
                android:id="@+id/logout_eval_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/pay_setting"
                android:layout_alignBottom="@+id/pay_setting"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp"
                app:font = "custom2"
                android:background="@color/btn_logut_bg"
                android:text="@string/btn_logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:elevation="2dp">
            <TextView
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:text = "선생님"
                android:textSize = "18dp"
                android:gravity="center"
                app:font = "custom2"
                android:textColor = "#ffffff"
                android:background="@drawable/buttonbackground_term"/>
            <TextView
                android:id="@+id/teacher_eval_write"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="선생님"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:background="@drawable/dialog_background"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff">
            <TextView
                app:font = "custom2"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:textColor = "#ffffff"
                android:text = "작성자"
                android:gravity="center"

                android:textSize = "18dp"
                android:background="@drawable/buttonbackground_term"/>
            <TextView
                android:id="@+id/writer_eval_write"
                android:paddingLeft="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="게시자"
                android:paddingBottom="5dp"
                android:background="@drawable/dialog_background"
                android:textSize="18dp"

                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:elevation="2dp"
            android:layout_marginBottom="5dp"
            android:background="#ffffff">
            <TextView
                app:font = "custom2"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:text = "별점"
                android:textSize = "18dp"
                android:gravity="center"
                android:textColor = "#ffffff"
                android:background="@drawable/buttonbackground_term"/>

            <RatingBar
                android:id="@+id/rating_eval_write"
                style="@style/Widget.AppCompat.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:isIndicator="false"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.5"
                android:background="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:elevation="2dp">

            <EditText
                android:id="@+id/review_eval_write"
                android:background="@drawable/dialog_background"
                android:paddingLeft="10dp"
                android:layout_width="352dp"
                android:layout_height="200dp"
                android:hint = "후기"
                app:font = "custom2"
                android:ems="10"
                android:inputType="text"
                android:paddingBottom="160dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/write_eval_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font = "custom2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonbackground_close"
                android:text="쓰기"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView >