<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="missingPrefix"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:background="@drawable/background"
    tools:context=".loginandregistration.activity.DialogActivity">

        <ImageView
            android:id="@+id/image_dial"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/korea" />

        <TextView
            android:id="@+id/name_dial"
            android:layout_width="135dp"
            android:layout_height="28dp"
            android:layout_alignTop="@+id/image_dial"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/image_dial"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"


            android:text="Name"
            android:textColor="#000000"
            app:font="custom2" />

        <TextView
            android:id="@+id/exp_dial"
            android:layout_width="135dp"
            android:layout_height="28dp"
            android:layout_below="@+id/name_dial"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/image_dial"
            android:background="@drawable/dialog_background"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"

            android:text="Exp"
            android:textColor="#000000"
            app:font="custom2" />

        <TextView
            android:id="@+id/grow_dial"
            android:layout_width="135dp"
            android:layout_height="28dp"
            android:layout_below="@+id/exp_dial"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/image_dial"
            android:background="@drawable/dialog_background"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Grow"
            android:textColor="#000000"
            app:font="custom2" />

        <TextView
            android:id="@+id/nation_dial"
            android:layout_width="135dp"
            android:layout_height="28dp"
            android:layout_below="@+id/grow_dial"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/image_dial"
            android:background="@drawable/dialog_background"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Nation"
            android:textColor="#000000"
            app:font="custom2" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/close_dial"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="닫기"
            android:layout_marginLeft="10dp"
            android:background="@drawable/buttonbackground_close"
            app:font = "custom2"
            android:layout_below="@+id/phone_dial"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/intro_dial" />

        <Button
            android:id="@+id/phone_dial"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonbackground_close"
            android:layout_width="130dp"
            android:layout_height="30dp"
            app:font = "custom2"
            android:text="전화"
            android:layout_below="@+id/intro_dial"
            android:layout_alignStart="@+id/intro_dial" />

        <Button
            android:id="@+id/eval_dial"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/intro_dial"
            android:layout_below="@+id/intro_dial"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonbackground_close"
            android:text="평가"
            app:font="custom2" />

        <TextView
            android:id="@+id/intro_dial"
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/image_dial"
            android:layout_below="@+id/image_dial"
            android:layout_marginTop="2dp"
            android:background="@drawable/dialog_background"
            android:padding="10dp"
            android:text="Introduce"
            app:font="custom2" />

        <RatingBar
            android:id="@+id/rating_dial"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/nation_dial"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/image_dial"
            android:background="@drawable/dialog_background"
            android:gravity="center_vertical"
            android:numStars="5"
            android:rating="5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/rating_text_dial"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:background="@drawable/dialog_background"
            android:gravity="center_vertical"
            android:text="0/5"
            android:textColor="#000000"
            app:font="custom2"
            android:layout_alignBottom="@+id/image_dial"
            android:layout_alignEnd="@+id/nation_dial" />


</RelativeLayout>